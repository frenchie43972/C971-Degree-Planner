<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DegreePlanner.Views.CourseAdd"
			 Title="Add Course">

	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="SaveCourse" Text="Save" Clicked="SaveCourse_Clicked"></ToolbarItem>
		<ToolbarItem x:Name="CancelCourse" Text="Cancel" Clicked="CancelCourse_Clicked"></ToolbarItem>
	</ContentPage.ToolbarItems>
	
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Course Name"
				   FontSize="Title"
				   Margin="10,0,10,0"/>
			<Editor Placeholder="Enter a Course Name"
					x:Name="CourseName"
					Text="{Binding CourseTitle}"
					Margin="10,0,10,0"/>
					
        </StackLayout>
    </ContentPage.Content>
</ContentPage>